<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.homedun.live.dao.OnlineChannelDao">

    <resultMap id="onlineChannelMap" type="com.homedun.live.domain.OnlineChannel">
        <result column="room_id" property="roomId"/>
        <result column="broadcast_topic" property="broadcastTopic"/>
        <result column="online_users" property="onlineUsers"/>
        <result column="start_time" property="startTime"/>
    </resultMap>

    <insert id="insert" parameterType="com.homedun.live.domain.OnlineChannel">
        INSERT INTO online_channel(room_id, broadcast_topic, online_users, start_time)
        VALUES
        (#{roomId}, #{broadcastTopic}, 0, NOW())
    </insert>

    <delete id="delete" parameterType="com.homedun.live.domain.OnlineChannel">
        DELETE FROM online_channel
        WHERE room_id = #{roomId}
    </delete>

    <select id="select" resultMap="onlineChannelMap">
        select * from online_channel WHERE room_id=#{roomId}
    </select>
    <select id="selectAll" resultType="com.homedun.live.domain.OnlineChannel">
        select * FROM online_channel;
    </select>

    <update id="updateOnlineUsers" parameterType="java.lang.Integer">
        UPDATE online_channel SET online_users = online_users + #{delta}
        WHERE room_id = #{roomId}
    </update>


</mapper>